<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

	<persistence-unit name="application" transaction-type="RESOURCE_LOCAL">

        <class>com.octo.red.happystore.model.CategoryFamily</class>
        <class>com.octo.red.happystore.model.Country</class>
        <class>com.octo.red.happystore.model.Product</class>
        <class>com.octo.red.happystore.model.SaleOperation</class>
        <class>com.octo.red.happystore.model.SaleTransaction</class>
        <class>com.octo.red.happystore.model.Stock</class>
        <class>com.octo.red.happystore.model.Store</class>
        <class>com.octo.red.happystore.model.VAT</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>

	</persistence-unit>

</persistence>
